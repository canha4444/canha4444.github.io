    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>

<body>
    
    <%- include('../include(ejs)/navigation.ejs') %>
    <main>  
      <div class="secondItem">
        <% if (prods.length > 0) { %>
            <div class="grid">
                    <ul class="cart__item-list">
                        <% prods.forEach(p => { %>
                            <li class="cart__item">
                                <h1><%= p.title %></h1>
                                <h2>Quantity: <%= p.cartItem.quantity %></h2>
                                <button class="btn"><a href='admin/edit-product/<%=p.id%>?edit=true'>Edit</a></button>
                                <form action="/delete-product" method="POST">
                                <input type="hidden" value="<%= p.id %>" name="productId">
                                <button class="btn btn-danger" type="submit">DELETE</button>
                            </form>
                            </li>
                        <% }) %>
                    </ul>
                  <form action="/create-order" method="POST">              
                    <button class="btn btn-danger" type="submit">Order Now</button>
                 </form>
            </div>
        </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
      </main>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        <%- include('../include(ejs)/end.ejs') %>